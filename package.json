{
  "name": "bible-studio",
  "productName": "바이블 스튜디오",
  "version": "1.0.0",
  "description": "AI 기반 성경 연구 및 설교문 작성 도구",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "dev": "npm run build:main && npm run build:preload && concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3000 && electron dist/main.js\"",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js",
    "build:preload": "webpack --config webpack.preload.config.js",
    "build:renderer": "webpack --config webpack.renderer.config.js"
  },
  "keywords": [],
  "author": {
    "name": "parkkiyun",
    "email": "kiyun0515@gmail.com"
  },
  "license": "MIT",
